<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{% block description %}{% endblock %}">

    <title>{% block title %}BBB Load Balancer{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    {% block stylesheets %}
        {% stylesheets '@BBBLoadBalancerThemeBundle/Resources/public/bootstrap/css/bootstrap.min.css'
                       '@BBBLoadBalancerThemeBundle/Resources/public/css/global.css'
                        filter='cssrewrite' filter='?uglifycss' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
  </head>

  <body class="{% block body_class %}{% endblock %}">
  {% block body %}
    {% block navigation %}
    {% endblock %}

    <div class="container">
      {% block content %}
      {% endblock %}
    </div>
  {% endblock %}
  {% block javascripts %}
      {% javascripts
          '@BBBLoadBalancerThemeBundle/Resources/public/js/jquery-1.11.1.min.js'
          '@BBBLoadBalancerThemeBundle/Resources/public/bootstrap/js/bootstrap.min.js'
          filter='?uglifyjs2' %}
          <script src="{{ asset_url }}"></script>
      {% endjavascripts %}
  {% endblock %}
  </body>
</html>